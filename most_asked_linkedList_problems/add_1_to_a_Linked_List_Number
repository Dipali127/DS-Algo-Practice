// GFG PROBLEM:
// appraoch:- first reverse the given linked list 
// traverse the reverse linked list and add one to the first value of reverse\
// linked list and while addition if there is any carry then handle it.
// after addition again reverse back the linked list to restore the original
// order of the given linked list.
// TC:O(N), Explanation:- two times O(N) to reverse the linked list and  to
// reverse back again the linked list after addition and O(N) to add 1 
// to the linked list through iterating whole linked list. So, overall 
// TC: O(N)+O(N)+O(N) = O(N) and SC:O(1)

class Solution {
    addOne(node)
    {
          function reverse(node){
            let prev = null;
            let next = null;
            let current = node;
            while(current!==null){
                next = current.next;
                current.next = prev;
                prev = current;
                current = next;
            }
            
            return prev;
        }
        
      node = reverse(node);
      let itrt = node;
      let carry = 1;
      while(itrt!=null){
          let sum = itrt.data+carry;
          itrt.data = sum%10;
          carry = Math.floor(sum/10);
          
          if(carry === 0){
              break;
          }
          
          if(itrt.next ===null && carry>0){
              itrt.next = new Node(carry);
              carry = 0;
          }
          
          itrt = itrt.next;
      }
      
      node = reverse(node);
      return node;
    }
}